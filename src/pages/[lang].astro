---

// - Importing styles
import "./../styles/index.css"

// - Importing text content
import en from "./../translations/en.json";
import hu from "./../translations/hu.json";

// - Importing images
import banner from "./../images/bannerk.webp"

// - Importing components
import { Markdown } from 'astro/components';
import NavigationBar from './../components/navigationBar.jsx';
import Hero from './../components/hero.jsx'

export async function getStaticPaths() {
  return [
    { params: { lang : 'en'}, props:  en },
    { params: { lang : 'hu'}, props:  hu }
  ];
}
const {lang} = Astro.request.params;
const item = Astro.props;
console.log(item);
---
<html lang={lang}>
  <head>
    <title>{item.title}</title>
    </head>
  <body>
    <NavigationBar title={item.title}/>
    <Hero minHeight={'500px'} backgroundImage={banner}/>
    <h1>{item.title}</h1>
    <article>
      <h2>{item.whatsThisTitle}</h2>
      <Markdown content={item.whatsThisContent}/>
    </article>
      <h2>{item.whatareVtubersTitle}</h2>
      <Markdown content={item.whatareVtubersContent}/>
    <article>
      <h2>{item.conventionsTitle}</h2>
      <Markdown content={item.conventionsContent}/>
    </article>
    <article>
      <h2>{item.helpVtubersTitle}</h2>
      <Markdown content={item.helpVtubersContent}/>
    </article>
  </body>
</html>